{
    "name": "fundamental-vue",
    "version": "0.0.6-beta",
    "private": false,
    "homepage": "https://github.com/SAP/fundamental-vue",
    "scripts": {
        "typecheck": "tsc --noEmit",
        "serve:docs": "env VUE_APP_API_DOCS_ENABLED=true vue-cli-service serve src/docs/main.ts",
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint:vue": "vue-cli-service lint",
        "test": "vue-cli-service test:unit 'src/**/__tests__/*.test.{tsx,ts,js,vue}'",
        "test:watch": "npm test -- --watch",
        "lint": "npx tslint --project tsconfig.json --config tslint.json",
        "lint:fix": "npm run lint -- --fix",
        "deploy": "node ./node_modules/vue-gh-pages/index.js"
    },
    "main": "dist/fundamentalvue.umd.js",
    "dependencies": {
        "fiori-fundamentals": "^1.4.1",
        "vue": "^2.5.21",
        "vue-class-component": "^6.3.2",
        "vue-property-decorator": "^7.2.0",
        "vue-router": "^3.0.2"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.5",
        "@vue/cli-plugin-unit-mocha": "^3.2.0",
        "@vue/cli-plugin-babel": "^3.2.0",
        "@vue/test-utils": "^1.0.0-beta.28",
        "chai": "^4.2.0",
        "@babel/plugin-proposal-class-properties": "^7.2.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
        "@babel/preset-env": "^7.2.3",
        "@babel/preset-typescript": "^7.1.0",
        "@types/jest": "^23.3.10",
        "@vue/cli-plugin-typescript": "^3.2.0",
        "@vue/cli-service": "^3.2.0",
        "babel-core": "7.0.0-bridge.0",
        "highlight.js": "^9.13.1",
        "html-loader": "^1.0.0-alpha.0",
        "markdown-loader": "^4.0.0",
        "node-sass": "^4.11.0",
        "raw-loader": "^1.0.0",
        "sass-loader": "^7.1.0",
        "tslint": "^5.12.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.2.2",
        "vue-gh-pages": "^1.19.0",
        "vue-template-compiler": "^2.5.21"
    }
}
